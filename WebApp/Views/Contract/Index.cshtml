@model IEnumerable<WebApp.Models.ContractModel>

<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Contracts Listing</div>
    <div class="panel-body">
        <a id="createEditBookModal" href="@Url.Action("CreateEditContract")" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span> Contract
        </a>

        <table class="table" style="margin: 4px">
            <tr>
                <th style="display:none;">
                    @Html.DisplayNameFor(model => model.ContractID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusDesc)
                </th>
                <th>
                    Action
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="display:none;">
                        @Html.DisplayFor(modelitem => item.ContractID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.FirstName) 
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusDesc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "CreateEditContract", new { id = item.ContractID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Details", "DetailContract", new { id = item.ContractID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "DeleteContract", new { id = item.ContractID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

